<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PresupuestosDisa" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/disa</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="Theme.SplashScreen.ComposeSplash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/disa</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logodisasplash</item>
        <item name="postSplashScreenTheme">@style/Theme.PresupuestosDisa</item>
    </style>
</resources>